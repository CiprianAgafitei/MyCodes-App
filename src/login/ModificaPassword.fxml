<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.ModificaPasswordController">
   <children>
      <AnchorPane fx:id="anchorPane">
         <children>
            <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="365.0" prefWidth="398.0" style="-fx-background-color: #ffffff;">
               <center>
                  <VBox prefHeight="317.0" prefWidth="398.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER" prefHeight="73.0" prefWidth="398.0">
                           <children>
                              <Label text="Modifica della password">
                                 <font>
                                    <Font name="Verdana Bold" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="70.0" prefWidth="398.0">
                           <children>
                              <Label text="Inserisci la nuova password">
                                 <font>
                                    <Font name="Verdana" size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="398.0">
                           <children>
                              <JFXPasswordField fx:id="nuovaPassword" focusColor="#ff9d00" labelFloat="true" promptText="Nuova password">
                                 <font>
                                    <Font name="Verdana" size="15.0" />
                                 </font>
                              </JFXPasswordField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="73.0" prefWidth="398.0">
                           <children>
                              <JFXPasswordField fx:id="confermaPassword" focusColor="#ff9d00" labelFloat="true" promptText="Conferma password">
                                 <font>
                                    <Font name="Verdana" size="15.0" />
                                 </font>
                              </JFXPasswordField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="90.0" prefWidth="398.0">
                           <children>
                              <JFXButton fx:id="indietroButtonPrimoAccesso" buttonType="RAISED" onAction="#changeSceneToLogin" style="-fx-background-color: red;" text="Annulla" textFill="WHITE">
                                 <font>
                                    <Font name="Verdana Bold" size="16.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </JFXButton>
                              <JFXButton fx:id="continuaButtonPrimoAccesso" buttonType="RAISED" onAction="#finishRegistration" style="-fx-background-color: #19ff05;" text="Continua" textFill="WHITE">
                                 <font>
                                    <Font name="Verdana Bold" size="16.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </JFXButton>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </children>
      </AnchorPane>
   </children>
</StackPane>
